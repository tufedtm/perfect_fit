.site-footer
  padding: 30px

  color: #ffffff
  font-size: 14px
  background-color: #d8d8d8

.footer-wrap
  container()

.footer-top
  display: flex

.footer-nav
  width: 640px
  ul
    column-count 3
    column-gap: 40px
  a
    color: inherit
    line-height: 22px
    text-decoration: underline
    &:hover
      text-decoration: none

.footer-soc
  display: flex
  margin-left: auto
  margin-right: auto

.soc-text
  max-width: 100px
  line-height: 18px

.soc-button
  display: inline-block
  width: 33px
  height: 33px
  background-color: transparent;
  border: none

  &:nth-of-type(1)
    background-image: url(../img/soc-fb.svg);

  &:nth-of-type(2)
    margin-left: 10px
    background-image: url(../img/soc-ok.svg);

  &:nth-of-type(3)
    margin-left: 10px
    background-image: url(../img/soc-vk.svg);


.footer-info
  margin-top: 40px

  line-height: 16px;
  column-count: 2;
  column-gap: 50px;

  strong
    font-weight: 700
    text-transform: uppercase
