.site-footer
  padding: 30px

  color: #ffffff
  font-size: 14px
  background-color: #d8d8d8
  @media (max-width: 950px)
    padding: 0

.footer-wrap
  container()

.footer-top
  display: flex
  @media (max-width: 950px)
    flex-direction: column-reverse
    .footer-soc
      align-items: center
      justify-content: center
      padding-top: 20px
      padding-bottom: 20px
    .soc-text
      max-width: none
    .soc-buttons
      height: 33px
      margin-left: 25px

.footer-nav
  width: 640px

  @media (max-width: 950px)
    width: auto
    padding: 20px
    border-top: 1px solid #fff;
    border-bottom: 1px solid #fff;

  @media (max-width: 650px)
    padding-left: 5px
    padding-right: 5px
  ul
    column-count 3
    column-gap: 40px
    @media (max-width: 650px)
      column-count: 2
      column-gap: 10px
    @media (max-width: 380px)
      padding-left: 25px
      column-count: 1
  a
    color: inherit
    line-height: 22px
    text-decoration: underline
    &:hover
      color: grey-7c

.footer-soc
  display: flex
  margin-left: auto
  margin-right: auto

.soc-text
  max-width: 100px
  line-height: 18px

.soc-button
  display: inline-block
  width: 33px
  height: 33px
  background-color: transparent;
  border: none
  border-radius: 50%

  &:nth-of-type(1)
    background-image: url(../img/soc-fb.svg);
    &:hover
      background-image: url(../img/soc-fb-hov.svg);

  &:nth-of-type(2)
    margin-left: 10px
    background-image: url(../img/soc-ok.svg);
    &:hover
      background-image: url(../img/soc-ok-hov.svg);

  &:nth-of-type(3)
    margin-left: 10px
    background-image: url(../img/soc-vk.svg);
    &:hover
      background-image: url(../img/soc-vk-hov.svg);


.footer-info
  margin-top: 40px

  line-height: 16px;
  column-count: 2;
  column-gap: 50px;

  @media (max-width: 950px)
    margin: 0
    padding: 30px
    column-count: 1
    strong
      display: inline-block
      margin-bottom: 10px

  strong
    font-weight: 700
    text-transform: uppercase
