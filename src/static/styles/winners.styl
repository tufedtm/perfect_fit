.winners-wrap
  padding-top: 40px
  .h1
    margin-bottom: 45px
    text-align: center

.tabs-buttons-content-wrap
  background-color: #f7f7f7

.tabs-buttons-content
  container()
  position: relative
  display: none
  padding-top: 85px
  padding-bottom: 70px

  background-image: url(../img/winners-bg.png)
  background-repeat: no-repeat
  background-position: left calc(100% - 20px)

  &::before
    css-triangle(#f7f7f7, up, 34px, 12px)
    position: absolute
    left: 0
    right: 0
    bottom: 100%
    margin: auto

  &:nth-of-type(1)
    &::before
      left: -535px

  &:nth-of-type(3)
    &::before
      left: 535px

  &.active
    display: block

  ol
    max-width: 640px
    margin-left: auto
    padding-left: 20px
    column-count: 2
    column-gap: 60px
    list-style: decimal

  li
    width: 300px

    line-height: 48px
    border-bottom: 1px solid #e9e9e9;
