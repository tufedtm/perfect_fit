.winners-wrap
  padding-top: 40px
  .h1
    text-align: center
    @media (max-width: 800px)
      margin-bottom: 45px

  .r-tabs-nav .r-tabs-anchor
      margin-top: 35px

  .r-tabs-tab.r-tabs-state-active::before
    top: calc(100% + 80px)

.tabs-buttons--winners
  @media (max-width: 800px)
    button
      display: block
      margin: 15px auto!important

.tabs-buttons-content-wrap
  background-color: #f7f7f7

.tabs-buttons-content
  container()
  position: relative
  padding-top: 85px
  padding-bottom: 70px

  background-image: url(../img/winners-bg.png)
  background-repeat: no-repeat
  background-position: left calc(100% - 20px)
  @media (max-width: 900px)
    background: none
    padding: 10px

  @media (min-width: 801px)
    &:nth-of-type(1)
      &::before
        left: -535px

    &:nth-of-type(3)
      &::before
        left: 535px

  ol
    max-width: 640px
    margin-left: auto
    padding-left: 20px
    padding-right: 20px
    column-count: 2
    column-gap: 60px
    @media (min-width: 401px) and (max-width: 900px)
      margin-right: auto
      li
        &:nth-of-type(4n)
          border: none
    @media (max-width: 500px)
      column-count: 1
      text-align: center
      li
        max-width: none
        &:nth-of-type(8n)
          border: none
  li
    max-width: 300px
    padding-left: 10px

    line-height: 48px
    border-bottom: 1px solid #e9e9e9;
