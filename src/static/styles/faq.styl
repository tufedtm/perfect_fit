.faq-wrap
  padding-top: 40px
  padding-bottom: 250px

  .h1
    margin-bottom: 30px
    text-align: center

.ask-add
  width: 320px
  margin-bottom: 50px
  margin-left: auto
  margin-right: auto

  font-size: 20px

.faq__ask-wrap
  display: none
  margin-bottom: 40px
  padding-top: 40px
  padding-bottom: 40px
  position: relative
  background-color: #f7f7f7

  &:before
    css-triangle(#f7f7f7, up, 34px, 12px)
    position: absolute
    left: 0
    right: 0
    bottom: 100%
    margin: auto

  &.active
    display: block

.faq__ask-form
  container()
  display: flex
  justify-content: space-between

  fieldset
    max-width: 420px
    width: 100%
    position: relative
    border: none

    .btn
      position: absolute
      bottom: 0
      right: 0

  label
    display: flex
    justify-content: space-between
    align-items: center
    margin-bottom: 8px

    .input
      margin-bottom: 0


.faq__content
  container(640px)
  padding-left: 30px
  color: grey-7c
  list-style: decimal

.faq__item
  margin-bottom: 10px

  font-size: 18px

  &.active
    margin-bottom: 50px
    color: active-color
    .faq__question
      &:before
        background-image: url(../img/faq_bd-active.svg);
      &:after
        css-triangle(active-color, up, 15px, 8px)

    .faq__answer
      height: auto
      color: grey-7c

.faq__question
  display: inline-block
  margin-bottom: 10px
  padding-bottom: 4px
  position: relative

  &:before
  &:after
    position: absolute
    bottom: 0

    content: ''

  &:before
    width: 100%
    height: 1px

    background-image: url(../img/faq_bd.svg);

  &:after
    css-triangle(grey-7c, down, 15px, 8px)
    top: 5px
    left: calc(100% + 10px)

.faq__answer
  height: 0
  overflow: hidden
  font-size: 15px
