.faq-wrap
  padding-top: 40px
  padding-bottom: 250px
  @media (max-width: 800px)
    padding-bottom: 50px

  .h1
    margin-bottom: 30px
    text-align: center

.ask-add
  width: 320px
  margin-bottom: 50px
  margin-left: auto
  margin-right: auto

  font-size: 20px

.faq__ask-wrap
  display: none
  margin-bottom: 40px
  padding: 40px 5px
  position: relative
  background-color: #f7f7f7

  &:before
    css-triangle(#f7f7f7, up, 34px, 12px)
    position: absolute
    left: 0
    right: 0
    bottom: 100%
    margin: auto

  &.active
    display: block

.faq__ask-form
  container()
  display: flex
  justify-content: space-between

  color: grey-7c
  @media (max-width: 950px)
    flex-direction: column
    align-items: center

    textarea
      margin-bottom: 20px

  fieldset
    max-width: 420px
    width: 100%
    position: relative
    border: none

    .btn
      position: absolute
      bottom: 0
      right: 0
      @media (max-width: 950px)
        position: relative
        margin: 30px auto 0

  label
    display: flex
    justify-content: space-between
    align-items: center
    margin-bottom: 8px
    @media (max-width: 400px)
      flex-wrap: wrap
      margin-bottom: 20px

    .input
      margin-bottom: 0
      @media (max-width: 400px)
        display: block
        width: 100%
        margin-top: 5px


.faq__content
  container(640px)
  padding-left: 30px
  color: grey-7c
  list-style: decimal

.faq__item
  margin-bottom: 25px
  padding-right: 15px

  font-size: 18px

  &.active
    margin-bottom: 50px
    color: active-color
    .faq__question
      border-bottom-color: active-color
      &:after
        css-triangle(active-color, up, 15px, 8px)
        position: relative
        top: -15px
        left: 10px
        display: initial

    .faq__answer
      height: auto
      margin-top: 15px

.faq__question
  position: relative
  padding-bottom: 3px
  line-height: 25px
  border-bottom: 1px dashed grey-7c;

  &:after
    css-triangle(grey-7c, down, 15px, 8px)
    position: relative
    top: 15px
    left: 10px
    display: initial

.faq__answer
  height: 0
  padding-right: 30px
  overflow: hidden
  color: grey-7c
  font-size: 15px
