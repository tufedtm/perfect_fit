.rules-wrap
  container()
  padding-top: 20px
  margin-bottom: 55px
  counter-reset: item

.rules__item
  position: relative
  margin-bottom: 20px

  border: 1px solid grey-a5
  border-radius: 10px
  background-repeat: no-repeat
  background-position: bottom
  counter-increment item

  &:nth-of-type(1)
    max-width: 700px
    margin-top: 70px
    padding-top: 30px
    padding-bottom: 20px
    padding-left: 40px

    &::before
      bottom: 10px
      right: -50px
      width: 434px
      height: 228px
      background-image: url(../img/rules_1.png);

    &::after
      top: 100%
      right: -65px
      transform: scale(-1, 1)

    .rules__title
      margin-bottom: 20px

      color: additional-color-1
      font-size: 20px
      line-height: 25px

    .rules__text
      max-width: 260px

  &:nth-of-type(2)
    max-width: 700px
    margin-top: 110px
    margin-left: auto
    padding-top: 30px
    padding-bottom: 20px
    padding-left: 330px

    &::before
      bottom: 0
      left: 30px
      width: 259px
      height: 220px
      background-image: url(../img/rules_2.png);

    &::after
      top: 100%
      left: -70px

    .rules__title
      color: active-color

  &:nth-of-type(3)
    display: flex
    justify-content: space-between
    margin-top: 110px
    padding-bottom: 30px
    padding-top: 60px
    padding-left: 40px

    &::before
      bottom: 0
      left: calc(0px - 100px)
      right: 0
      width: 264px
      height: 208px
      margin: auto

      background-image: url(../img/rules_3.png)

    &::after
      content: none

    .rules__title
      color: additional-color-2

    .rules__text
      margin-top: -10px
      padding-right: 45px

  &::before
  &::after
    content: ''
    position: absolute
    display: block
    z-index: 1

  &::after
    size 46px 80px
    background-image: url(../img/rules-arr.svg)

.rules__title
  position: relative
  display: block
  margin-left: 75px
  margin-bottom: 25px

  font-size: 18px

  &::before
    content: counter(item)
    position: absolute
    top: 0
    bottom: 0
    right: calc(100% + 10px)
    display: flex
    justify-content: center
    align-items: center
    size: 64px
    margin: auto

    font-size: 48px

    border: 3px solid
    border-radius: 50%
    background-color: #fff

.rules__head
  display: block
  font-size: 20px
  font-weight: 700
  text-transform: uppercase

.rules__text
  display: block
  font-size: 15px
  line-height: 18px

.rules-btn
  margin: 0 auto 50px
  width: 380px
