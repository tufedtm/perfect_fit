.rules-wrap
  container()
  padding-top: 20px
  margin-bottom: 55px
  counter-reset: item

.rules__item
  position: relative
  height: 240px

  background-repeat: no-repeat
  background-position: bottom
  counter-increment item

  &:nth-of-type(1)
    max-width: 750px
    padding-top: 115px
    padding-left: 40px

    background-image: url(../img/rules_1.png);

    .rules__title
      margin-bottom: 20px
      color: additional-color-1;
      line-height: 25px

    .rules__text
      max-width: 260px

  &:nth-of-type(2)
    max-width: 705px
    margin-left: auto
    padding-top: 115px
    padding-left: 330px

    background-image: url(../img/rules_2.jpg);

    .rules__title
      color: active-color;

  &:nth-of-type(3)
    display: flex
    justify-content: space-between
    padding-top: 145px
    padding-left: 40px

    background-image: url(../img/rules_3.png);
    background-size: contain

    .rules__title
      color: additional-color-2;

      &::before
        top: -32px

    .rules__text
      margin-top: -10px
      padding-right: 45px

.rules__title
  position: relative
  display: block
  margin-left: 75px
  margin-bottom: 25px

  font-size: 20px

  &::before
    content: counter(item)
    position: absolute
    top: 0
    bottom: 0
    right: calc(100% + 10px)
    display: flex
    justify-content: center
    align-items: center
    size: 64px
    margin: auto

    font-size: 48px

    border: 3px solid;
    border-radius: 50%
    background-color: #fff;

.rules__head
  display: block
  font-weight: 700
  text-transform: uppercase

.rules__text
  display: block
  font-size: 15px
  line-height: 18px

.rules-btn
  margin: 0 auto 50px
  width: 380px
