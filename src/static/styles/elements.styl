.h1
  display: block
  padding-left: 5px
  padding-right: 5px

  color: grey-7c
  font-size 27px
  font-weight 700
  text-transform uppercase

.h2
  color additional-color-1
  font-size 20px
  font-weight 400

.h-additional
  color: active-color
  font-size: 18px
  font-weight: 700

.btn
  position: relative
  display: block
  max-width: 100%
  width: 300px
  height: 50px
  z-index: 1

  color: #fff
  font-size: 18px
  font-weight: 700
  line-height: 50px
  text-align: center
  text-transform: uppercase
  text-decoration: none

  background-color: active-color
  border: none
  border-radius: 9px

  transition: background-color 0.3s, color 0.3s

  &::before
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border: 2px solid active-color
    z-index: -1
    border-radius: inherit
    opacity: 0
    transform: scale3d(0.6, 0.6, 1)
    transition: transform 0.3s, opacity 0.3s
    transition-timing-function: cubic-bezier(0.75, 0, 0.125, 1)

  &:hover
    background-color: #fff
    color: active-color

    &::before
      transform: scale3d(1, 1, 1)
      opacity: 1

  &--small
    width: 220px
    height: 40px
    line-height: 40px

  &--large
    height: 64px
    line-height: 64px

    color: #ffec10
    font-size: 23px

  &--minor
    background-color: grey-a5

    &::before
      border: 2px solid grey-a5

    &:hover
      color: grey-a5

.input
  width: 300px
  height: 50px
  margin-bottom: 8px
  padding-left: 10px
  padding-right: 10px

  color: grey-7c
  font-size: 15px
  border: 1px solid grey-7c
  border-radius: 10px

  &::placeholder
    color: #bdbdbd

  &--micro
    width: 80px

  &--small
    height: 40px

  &--large
    height: 64px

textarea
  max-width: 460px
  width: 100%
  height: 185px
  padding: 15px

  color: grey-7c
  font-size: 15px
  border: 1px solid #7c7c7c
  border-radius: 10px

// form
.form__error-message
  display: none
  margin-bottom: 20px

  color: #e80101
  font-size: 14px
  text-align: center

.form--required
  .form__error-message
    display: block

  [required]
  .checkbox:not(:checked) + label:before
    border: 1px solid #e80101

//// form

// checkbox
.checkbox
  position: absolute
  opacity: 0

  + label
    position: relative
    display: inline-block
    margin-bottom: 10px
    padding-left: 30px

    cursor: pointer

    &::before
    &::after
      position: absolute
      content: ''
      bottom: 0
      margin: auto

    &::before
      size: 20px
      top: 0
      left: 0

      border 1px solid grey-7c
      border-radius 5px
      background-color: #fff

    &::after
      size 20px 18px
      top: -2px
      left: 4px

  @media (max-width: 900px)
    &.checkbox--xs + label
      margin-bottom: 30px
      margin-left: 10px
      padding-left: 45px
      @media (max-width: 900px)
        margin-left: 0
      @media (max-width: 440px)
        justify-content: center
      &::before
        size: 30px
      &::after
        top: 0
        left: 5px

  &:checked + label:after
    background-image url(../img/checked.svg)

//// checkbox

/*
 * tabs buttons
 */
.r-tabs
  position: relative
  .r-tabs-nav
    max-width: 800px
    margin: auto
    padding: 0

    text-align: center
    @media (max-width: 800px)
      display: none
    .r-tabs-tab
      position: relative
      display: inline-block
      + .r-tabs-tab
        margin-left: 100px

  .r-tabs-tab
  .r-tabs-accordion-title
    &.r-tabs-state-active
      &::before
        css-triangle(#f7f7f7, up, 34px, 12px)
        position: absolute
        top: calc(100% + 45px)
        left: 0
        right: 0
        bottom: 100%
        margin: auto

  .r-tabs-nav .r-tabs-anchor
  .r-tabs-accordion-title .r-tabs-anchor
    position: relative
    display: inline-block
    margin-bottom: 35px
    padding-bottom: 4px

    color: grey-7c
    font-size: 16px
    font-weight: 700
    text-decoration: none
    text-transform: uppercase

    &:before
    &:after
      position: absolute
      bottom: 0
      content: ''

    &:before
      width: 100%
      height: 1px
      background-image: url(../img/faq_bd.svg)

    &:after
      css-triangle(grey-7c, down, 15px, 8px)
      top: 5px
      left: calc(100% + 10px)

  .r-tabs-state-active
    .r-tabs-anchor
      color: active-color
      &:before
        background-image: url(../img/faq_bd-active.svg)
      &:after
        css-triangle(active-color, up, 15px, 8px)

    + .r-tabs-accordion-title
      margin-top: 35px

  .r-tabs-accordion-title
    position: relative
    display: none
    text-align: center
    @media (max-width: 800px)
      display: block

  .r-tabs-panel
    display: none
    &.r-tabs-state-active
      display: block
