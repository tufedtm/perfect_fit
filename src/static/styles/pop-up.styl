html.popup-active {
  position: relative;
  margin-right: 17px;
  overflow: hidden;
}

.pop-up
  display: none
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba(0, 0, 0, .7)
  text-align: center
  z-index: 100
  overflow-y: auto;

  &.active
    display: block

  &:after
    content: ''
    display: inline-block
    height: 100%
    vertical-align: middle

  .h-sub
    margin-bottom: 30px

  .btn
    margin: 0 auto

  &--register
    .input
      margin-bottom: 15px
    .btn
      margin-bottom: 80px

  &--code
  &--code-happy
    .personal-ball-add
      margin-top: 30px
    .pop-up__ball-add
      margin-bottom: 20px

  &--code-happy
    .pop-up__content
      background-image: url(../img/pop-up-code-happy-bg.jpg)
      background-position: bottom
      background-repeat: no-repeat

  &--delivery
    .pop-up__content
      height: 535px
      background-image: url(../img/pop-up-delivery-bg.jpg)
      background-position: center
      background-repeat: no-repeat
    .pop-up__text-action
      position: absolute
      bottom: 110px
      left: 0
      right: 0
    .personal-ball-add
      position: absolute
      bottom: 0
      width: 100%


.pop-up__content
  width: 780px
  position: relative;
  display: inline-block;
  min-height: 500px
  padding-top: 40px

  vertical-align: middle;

  border-radius: 10px
  background-color: #fff

  .h1
    margin-bottom: 20px
    color: active-color
    text-align: center

.repeat-code-wrap
  display: flex
  justify-content: center
  text-align: left

  p
    margin-right: 25px
    line-height: 22px

  button
    display: block

    color: active-color
    text-decoration: underline
    border: none
    background-color: transparent
    &:hover
      text-decoration: none

.pop-up__cancel
  position: absolute
  top: 20px
  right: 20px
  size: 40px

  border: 2px solid grey-7c;
  border-radius: 50%
  background-color: transparent;

  &::before
  &::after
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    width: 18px
    height: 4px
    margin: auto

    background-color: grey-7c
    content: ''
  &::before
    transform: rotate(45deg)
  &::after
    transform: rotate(-45deg)

.pop-up__ball-add
  display: flex
  flex-direction: column
  justify-content: center
  size: 190px
  margin: 0 auto 30px

  color: additional-color-2
  font-size: 20px
  border: 7px solid additional-color-2
  border-radius: 50%

.pop-up__ball
  font-size: 110px

.pop-up__share
  position: relative
  padding-top: 25px

  .soc-buttons
    position: absolute
    top: 22px
    right: 0
    width: 250px
    margin: auto

  .soc-button
    size: 50px
    &:nth-of-type(1)
      background-image: url(../img/soc-fb-hov.svg);
    &:nth-of-type(2)
      background-image: url(../img/soc-ok-hov.svg);
    &:nth-of-type(3)
      background-image: url(../img/soc-vk-hov.svg);

.pop-up__share-text
  line-height: 22px

.pop-up__text-action
  color: additional-color-2
  font-size: 18px
  font-weight: 700

.pop-up__link
  display: inline-block
  margin-bottom: 20px

  color: grey-7c
  text-decoration: underline

  &:hover
    text-decoration: none
