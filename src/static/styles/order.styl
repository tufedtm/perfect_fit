.order-wrap
  padding-top: 40px
  .h1
    margin-bottom: 20px
    text-align: center

.order__head
  container(780px)
  display: flex
  counter-reset: item

.order__step-head
  display: flex
  justify-content: center
  align-items: center
  width: 280px
  height: 50px
  padding-left: 40px

  font-weight: 700
  text-transform: uppercase
  background-color: #fff
  border: 1px solid #e9e9e9
  border-radius 9px
  counter-increment: item

  + .order__step-head
    margin-left: -15px

  &.current
    width: 260px
    z-index: 1

    background-color #e9e9e9

    span
      opacity: 1

  span
    opacity: .5
    position: relative

    &:before
      position: absolute
      top: 0
      bottom: 0
      right: calc(100% + 10px)
      display: flex
      justify-content: center
      align-items: center
      width 30px
      height 30px
      margin: auto

      font-size: 20px
      border 2px solid grey-7c
      border-radius: 50%
      content: counter(item)

.order__step-content
  display: none

  &.current
    display: block

  &:nth-of-type(1)
    container(780px)
    padding-top: 55px
    padding-bottom: 55px
    position: relative

.order__cups-wrap
  display: flex
  align-content: space-between
  flex-direction: column
  flex-wrap: wrap
  max-height: 360px
  a
    display: block
    size: 86px
    margin-bottom: 3px
    padding-top: 8px
    padding-left: 10px

    border: 1px solid transparent
    &.current

      border-color: grey-a5
      border-radius: 10px

.order__cups-item
  position: absolute
  top: 55px
  left: 0
  right: 0

  display: flex
  align-items: center
  justify-content: center
  max-width: 500px
  height: 360px
  margin: auto
  padding-left: 40px

  border 1px solid #a5a5a5
  border-radius 10px
  img
    max-width: 234px

.cups-slider-prev
.cups-slider-next
  display: block
  width: 20px
  height: 38px
  position: absolute
  top: 0
  bottom: 0
  margin: auto

  cursor: pointer
  &::before
  &::after
    position: absolute
    top: 0
    left: 0

    content: ''

  &::before
    top: 1px
    border: solid transparent
    border-width: 17px 18px
    border-left-color: #fff
    z-index: 1

  &::after
    border: solid transparent
    border-width: 18px 19px
    border-left-color: #b0b0af

.cups-slider-prev
  left: 40px
  transform: scale(-1, 1)

.cups-slider-next
  right: 40px

.order-next-btn
  margin: 50px auto 0
