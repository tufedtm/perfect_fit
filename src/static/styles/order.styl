.order-wrap
  padding-top: 40px
  .h1
    margin-bottom: 20px
    text-align: center

.order__head
  container(780px)
  display: flex
  counter-reset: item

.order__step-head
  display: flex
  justify-content: center
  align-items: center
  width: 280px
  height: 50px
  padding-left: 40px

  font-weight: 700
  text-transform: uppercase
  background-color: #fff
  border: 1px solid #e9e9e9
  border-radius 9px
  counter-increment: item

  + .order__step-head
    margin-left: -15px

  &.current
    width: 260px
    z-index: 1

    background-color #e9e9e9

    span
      opacity: 1

  span
    opacity: .5
    position: relative

    &:before
      position: absolute
      top: 0
      bottom: 0
      right: calc(100% + 10px)
      display: flex
      justify-content: center
      align-items: center
      width 30px
      height 30px
      margin: auto

      font-size: 20px
      border 2px solid grey-7c
      border-radius: 50%
      content: counter(item)

