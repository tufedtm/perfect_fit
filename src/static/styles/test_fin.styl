      &::before
        background-image: url(../img/test/test-fin-package8.png)

.test-fin__hero
  height: 480px
  margin-bottom: -30px

  background-repeat: no-repeat
  background-size: contain, 110%
  background-position: center

.test-fin__cat-character-text
  display: flex
  justify-content: center
  align-items: center
  width: 881px
  height: 241px
  margin-left: auto
  margin-right: auto
  padding-left: 80px
  padding-right: 80px

  color: #333
  font-size: 18px
  line-height: 24px
  text-align: center
  background-image: url(../img/test/test-fin-badge.svg);

.test-fin__bottom
  display: flex
  align-items: flex-end
  max-width: 730px
  margin: 0 auto 50px

.test-fin__package
  position: relative
  max-width: 420px
  flex-shrink: 0
  padding-left: 115px

  line-height: 20px

  &::before
    content: ''
    position: absolute
    left: 0
    bottom: -5px
    display: block
    width: 110px
    height: 130px

.test-fin__share
  position: relative
  margin-top: 30px
  padding-left: 140px

  line-height: 20px

  &::before
  &::after
    content: ''
    position: absolute
    display: block

  &::before
    left: 0
    bottom: 0
    width: 128px
    height: 113px

    background-image: url(../img/winners-bg.png)
    background-size: 110%

  &::after
    width: 47px
    height: 118px
    left: 100%
    top: 20px
    background-image: url(../img/test/test-fin-share-arr.svg)


.test-fin__share-btns
  container(720px)
  display: flex
  justify-content: space-between

  button
    position: relative
    width: 210px
    height: 40px
    padding-left: 50px

    color: #fff
    font-size: 18px
    border: none
    border-radius: 9px

    &::before
      content: ''
      position: absolute
      top: 0
      left: 0
      display: block
      width: 50px
      height: 100%

      border-right: 1px solid #fff
      background-repeat: no-repeat
      background-position: center

    &:nth-of-type(1)
      background-color #f68121
      &:hover
        background-color: #d6711d

      &::before
        background-image: url(../img/test/ok.svg);

    &:nth-of-type(2)
      background-color #527499
      &:hover
        background-color: #3a5675

      &::before
        background-image: url(../img/test/vk.svg);

    &:nth-of-type(3)
      background-color #3c5a98
      &:hover
        background-color: #284175

      &::before
        background-image: url(../img/test/fb.svg);

