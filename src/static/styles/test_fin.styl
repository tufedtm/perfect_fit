.test-fin-wrap
  container()
  margin-top: 30px
  margin-bottom: 50px
  padding-bottom: 35px

  overflow: hidden
  border-radius: 10px
  background-color: grey-f7

.test-fin__item
  display: none

  &.current
    display: block

  &:nth-of-type(1)
    .test-fin__hero
      background-image: url(../img/test/test-fin-hero1.png), url(../img/test/test-fin-bg.svg)
    .test-fin__package
      color: active-color
      &::before
        background-image: url(../img/test/test-fin-package1.png)

  &:nth-of-type(2)
    .test-fin__hero
      background-image: url(../img/test/test-fin-hero2.png), url(../img/test/test-fin-bg.svg)
    .test-fin__package
      color #439940
      &::before
        background-image: url(../img/test/test-fin-package2.png)

  &:nth-of-type(3)
    .test-fin__hero
      background-image: url(../img/test/test-fin-hero3.png), url(../img/test/test-fin-bg.svg)
    .test-fin__package
      color #f39305
      &::before
        background-image: url(../img/test/test-fin-package3.png)

  &:nth-of-type(4)
    .test-fin__hero
      background-image: url(../img/test/test-fin-hero4.png), url(../img/test/test-fin-bg.svg)
    .test-fin__package
      color #f39305
      &::before
        background-image: url(../img/test/test-fin-package4.png)

  &:nth-of-type(5)
    .test-fin__hero
      background-image: url(../img/test/test-fin-hero5.png), url(../img/test/test-fin-bg.svg)
    .test-fin__package
      color #00aeef
      &::before
        background-image: url(../img/test/test-fin-package5.png)

  &:nth-of-type(6)
    .test-fin__hero
      background-image: url(../img/test/test-fin-hero6.png), url(../img/test/test-fin-bg.svg)
