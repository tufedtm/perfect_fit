.ionTabs__head-wrap
  background-color: #f7f7f7;

.ionTabs__head
  container()
  display: flex
  justify-content: space-between
  padding: 0

  list-style-type: none
  counter-reset li

.ionTabs__tab
  position: relative

  width: 100%
  padding: 55px 30px 55px 125px

  font-size: 18px
  cursor: pointer
  list-style-type: none
  background: none
  border-left: 1px solid #ccc

  &::before
    position: absolute
    top: 0
    bottom: 0
    left: 40px

    content: counter(li)
    counter-increment: li
    display: flex
    justify-content: center
    align-items: center
    size 65px
    margin: auto

    font-size: 48px
    border: 3px solid grey-a5
    border-radius: 50%
  &:nth-of-type(1)
    font-size: 20px
    text-transform: uppercase

    &.ionTabs__tab_state_active
      color: additional-color-1;
      &::before
        border-color: additional-color-1;
      &::after
        css-triangle(additional-color-1, down, 46px, 15px)

  &:nth-of-type(2)
    &.ionTabs__tab_state_active
      color: active-color;
      &::before
        border-color: active-color;
      &::after
        css-triangle(active-color, down, 46px, 15px)

  &:nth-of-type(3)
    border-right: 1px solid #ccc
    &.ionTabs__tab_state_active
      color: additional-color-2;
      &::before
        border-color: additional-color-2;
      &::after
        css-triangle(additional-color-2, down, 46px, 15px)

  &.ionTabs__tab_state_active
    cursor: default
    &::before
      background-color: #fff;
    &::after
      position: absolute
      top: 0
      left: 0
      right: 0
      margin: 0 auto;

.tabs__title
  display: block

  font-size: 20px
  font-weight: 700
  text-transform: uppercase


.ionTabs__item
  display: none
  height: 465px
  position: relative

  font-size: 18px
  line-height: 1.4
  text-align: center
  background-repeat: no-repeat

  &:nth-of-type(1)
    container()
    padding-top: 40px

    background-image: url(resources/tab1_bg.jpg)
    background-position-x: right

  &:nth-of-type(2)
    container(1100px)
    padding-top: 15px

    background-image: url(resources/tab2_bg.jpg)
    background-position: left bottom

  &.ionTabs__item_state_active
    display: flex
    justify-content: space-between

  .tabs__item-title
    color: additional-color-1

.tabs__item-left,
.tabs__item-right
  position: relative
  width: 100%

.tabs__item-right
  padding-left: 100px

.tabs__item-title
  margin-left: -140px

  font-size: 20px
  text-align: left;
  text-transform: uppercase

.tabs__item-title-bold
  display: block

  font-size: 27px
  font-weight: 700
  text-indent: 85px

.score
  display: flex
  position: absolute
  bottom: 45px

  line-height: 1
  &__item
    display: flex
    width: 120px
    height: 60px

    border: 1px solid #ccc;
    border-radius: 50px
    background-color: #fff;

    & + &
      margin-left: 20px

  &__point
    position: relative
    top: -1px
    left: -1px

    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
    size 60px

    color: #ffffff
    font-size: 15px

    border-radius: 50%
    background-color: additional-color-1;

  &__weight
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column
    flex-grow 1
    padding-right: 10px

.score-point
  font-size: 25px
  font-weight: 700

.score-weight
  font-size: 20px


.tab2__form-wrap
  position: absolute
  bottom: 40px
  right: 80px

.tab2__btn
  margin-bottom: 25px

  &--hide
    position: absolute
    display: none

.tab2__form
  display: none
